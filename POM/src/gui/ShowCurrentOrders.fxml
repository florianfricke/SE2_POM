<BorderPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="addressTable" editable="true" BorderPane.alignment="CENTER">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="customerId" prefWidth="75.0" text="ID">
               <cellValueFactory>
                  <PropertyValueFactory property="street" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="product" prefWidth="75.0" text="Product">
               <cellValueFactory>
                  <PropertyValueFactory property="houseNo" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="priority" prefWidth="75.0" text="Priority">
               <cellValueFactory>
                  <PropertyValueFactory property="zipCode" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="orderDate" prefWidth="75.0" text="Order Date">
               <cellValueFactory>
                  <PropertyValueFactory property="city" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="releaseDate" prefWidth="75.0" text="Release Date">
               <cellValueFactory>
                  <PropertyValueFactory property="country" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="state" prefWidth="75.0" text="State">
               <cellValueFactory>
                  <PropertyValueFactory property="billingAddress" />
               </cellValueFactory>
            </TableColumn>
         </columns>
      </TableView>
   </center>
</BorderPane>
