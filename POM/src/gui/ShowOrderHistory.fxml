                              <TableColumn fx:id="releaseDate" prefWidth="75.0" text="Release Date">
                                 <cellValueFactory>
                                    <PropertyValueFactory property="releaseDate" />
                                 </cellValueFactory>
                              </TableColumn>
                              <TableColumn fx:id="dueDate" prefWidth="75.0" text="Due Date">
                                 <cellValueFactory>
                                    <PropertyValueFactory property="dueDate" />
